<!DOCTYPE html>
<html>
    <head>
        <!-- Once again, basic view layout using flex box.-->
        <%- include('header.ejs') %>
        <title>View Outfits</title>
        <style>
            H1 { text-align: center }

            .col-auto{
               display: block;
               margin: auto;
               width: 33%;
               border: 1px solid #000000;
           }

           .row{
               display: flex;
               flex-wrap: wrap;
               margin: 0 auto;
               width: 100%;
               flex-direction: row;
               justify-content: center;
           }  

           img {
               width: 300px;
               height: 300px;
               object-fit: contain;
           }

           body {
            background-color: seashell;
            font-family: Garamond, serif;
         }
       </style>
    </head>

    

    <body>
        <h1 align="left">View Outfits</h1>
       

        <div class="container">
            <div class="row">
                <% if (displayItem.length !== 0) { %>
                    <% displayItem.forEach(function(data, index) { %>
                        <div class="col-auto">
                            
                            <img src="<%= data.image_link %>"" alt ="clothing item">
                            
                            <p>Title: <%= data.title %></p>

                            <p>Outfit ID: <%= data.outfitID %> </p>
                            
                            <a href="/view-outfits/delete-outfit/<%=data.outfitID%>" onclick="return confirm('Are you sure you want to delete this outfit ? This will not delete any clothing items in the outfit');">
                                <button>Delete</button>
                            </a>
                        </div>
                        <% }); %>
    
    
                    <% } else { %>
                    <p>No Data Found</p>
                  <% } %>
            </div>
        </div>

       

    </body>
</html>